<!DOCTYPE html>
<html lang="en">
<head>
<%- include('../components/header') %>
</head>
<body>
  <%- include('../components/nav') %>
 
  <div class="w-full px-10">
    <% if (todos.length === 0) { %>
      <div class="px-5 py-3 mx-auto mt-12 bg-red-300 border border-red-400 " role="alert">
        <h1 class="text-red-900">No Todos To show</h1>
      </div>
    <% } %>
  </div>

  <main class="grid grid-cols-4 px-10 mt-12 gap-x-3">
   
    <% todos.forEach(todo => { %>
      <div class="px-5 py-3 border border-red-300 rounded-lg">
        <div class="flex items-center justify-between">
          <p><%= todo.formated_date %></p>
          <p class="px-3 py-1 text-blue-400 border border-blue-500 rounded-xl"><%= todo.category_name %></p>
        </div>
        <h1><%= todo.name %></h1>
        <p><%= todo.is_completed ? 'tamamlandı' : 'tamamlanmadı' %></p>

        <div class="flex justify-between gap-4">
          <button>Tamamlandı</button>
         <div>
          <a href="/todos/edit/<%= todo.todoid %>" class="px-3 py-1 text-white bg-blue-600 border border-blue-700 rounded-lg">Düzenle</a>
          <a href="/todos/delete/<%= todo.todoid %>" class="px-3 py-1 text-white bg-red-600 border border-red-700 rounded-lg">Sil</a>
         </div>
        </div>
      </div>
    <% }) %>
  </main>

</body>
</html>